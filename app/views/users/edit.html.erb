
<h2 class="text-center profile-title" >Complétez votre profil</h2>

<% if current_user.pro? %>
<div class="container profile-container">

  <%= simple_form_for(@user) do |f| %>

  <div class="row profile-first-row">
    <!-- Card infos de la société -->
    <div class="col-xs-12 col-md-3 col-profile-style">
      <%= f.input :company %>
      <%= f.input :address %>
      <%= f.input :city %>
      <%= f.input :zip_code %>
      <%= f.input :radius %>
    </div>
    <div class="col-xs-12 col-md-3 col-profile-style">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :position %>
      <%= f.input :email %>
      <%= f.input :office_phone %>
      <%= f.input :mobile_phone %>
    </div>
    <!-- card skills et description -->
    <div class="col-xs-12 col-md-6 col-profile-style">
      <p>Type de travaux</p>
      <div class="checkbox_form">
        <span>
          <%= f.check_box :construction %>
          Construction
        </span>
        <span>
          <%= f.check_box :renovation  %>
          Renovation
        </span>
        <span>
          <%= f.check_box :entretien  %>
          Entretien
        </span>
      </div>

      <p>Spécialités</p>
      <div class="checkbox_form">
        <span>
          <%= f.check_box :couverture  %>
          Couverture
        </span>
        <span>
          <%= f.check_box :ouverture  %>
          Ouverture
        </span>
        <span>
          <%= f.check_box :terrasse  %>
          Terrasse
        </span>
        <span>
          <%= f.check_box :plomberie  %>
          Plomberie
        </span>
        <span>
          <%= f.check_box :charpente  %>
          Charpente
        </span>
      </div>
      <p>Type de bien</p>
      <div class="checkbox_form">
        <span>
          <%= f.check_box :maison  %>
          Maison
        </span>
        <span>
          <%= f.check_box :chateau  %>
          Chateau
        </span>
        <span>
          <%= f.check_box :immeuble  %>
          Immeuble
        </span>
      </div>
      <p>Labels</p>
      <div class="checkbox_form">
        <span>
          <%= f.check_box :rge  %>
          RGE
        </span>
        <span>
          <%= f.check_box :qualibat  %>
          Qualibat
        </span>
        <span>
          <%= f.check_box :mh  %>
          Agrément Monuments Historiques
        </span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-8">
      <%= f.input :description%>
      <span id="description-count"><strong></strong></span><span> sur 900 lettres  </span>
    </div>
    <div class="col-xs-12 col-md-4 flebox-edit-user">
      <span> <%= f.input :photo_company_logo, as: :attachinary %> </span>
      <span> <%= f.input :photo_presentation, as: :attachinary %> </span>
    </div>
  </div>

  <div class="row">

    <!--   Enregistrer mes modifications -->
    <div class="col-xs-12 col-profile-submit">
      <%= f.button :submit, "Mettre à jour mon profil", class: "btn btn-success" %>
      <% end %>
      <%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete %>
      <%= link_to t("devise.shared.links.back"), :back %>
    </div>
    <div class="col-xs-12 col-profile-submit">
      <%= link_to new_project_path(current_user), class: "navbar-wagon-button btn" do %>
        <span>Accéder mes projets</span>
      <% end %>
      <%= link_to user_path(current_user), class: "navbar-wagon-button btn" do %>
        <span>Voir ma fiche complète</span>
      <% end %>
    </div>
  </div>
</div>

<% else %>
  <div class="container container-edit-worker">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
        <%= simple_form_for(@user) do |f| %>
          <%= f.input :email %>
          <%= f.input :mobile_phone %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :address %>
          <div class="flexbox-form-edit-worker">
            <label><%= f.check_box :couvreur %><span>couvreur</span></label>
            <label><%= f.check_box :charpentier %><span>charpentier</span></label>
          </div>
          <%= f.input :cv, as: :attachinary %>
          <%= f.input :photo, as: :attachinary %>
          <%= f.button :submit, "Mettre à jour mes informations", class: "navbar-wagon-button" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- JS Autocomplete -->
<%= content_for(:after_js) do %>
  <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyC0J8yKgp1HNvXsiK1_H_PCAz2f-D9Zq4Y"></script>
<% end %>
