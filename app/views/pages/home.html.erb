        <li><i class="fa fa-check-square-o" aria-hidden="true"></i> Publication d'articles dans le magazine</li>
      </ul>
    </div>
    <div class="col-xs-12 text-left">
      <h2><%= link_to "Accéder à l'annuaire", users_path %></h2>
    </div>
  </div>
</div>

<!-- Card magazine -->
<div class="container annuaire-card-home">
  <div class="row row-annuaire-card-home">
    <div class="col-xs-12 col-sm-12">
      <h1>Le magazine</h1>
    </div>
    <div class="col-xs-12">
      <% @articles.each do |article| %>
         <%= render "shared/card_article", article: article %>
      <% end %>
    </div>
  </div>
</div>



