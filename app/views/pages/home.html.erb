
<h1 class="text-center">Bienvenue chez belles toitures</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">

      <%= simple_form_for(@client) do |f| %>
        <%= f.input :address, placeholder: "Lieu des travaux" %>

        <h3>Type de travaux</h3>
        <span>Construction</span>
        <%= f.check_box :construction %>
        <span>Renovation</span>
        <%= f.check_box :renovation %>
        <span>Entretien</span>
        <%= f.check_box :entretien %>

        <h3>Spécialités</h3>
        <span>Couverture</span>
        <%= f.check_box :couverture %>
        <span>Ouverture</span>
        <%= f.check_box :ouverture %>
        <span>Terrasse</span>
        <%= f.check_box :terrasse %>
        <span>Plomberie</span>
        <%= f.check_box :plomberie %>
        <span>Charpente</span>
        <%= f.check_box :charpente %>

        <h3>Type de bien</h3>
        <span>Maison</span>
        <%= f.check_box :maison %>
        <span>Chateau</span>
        <%= f.check_box :chateau %>
        <span>Immeuble</span>
        <%= f.check_box :immeuble %>
        <span>Monument historique</span>
        <%= f.check_box :monument_historique %>
        <br>
        <%= f.button :submit, "Rechercher des pros" %>
      <% end %>


      <%= link_to users_path, class: "main-cta" do %>
        <span>Liste des pros</span>
      <% end %>
      <br>
      <%= link_to edit_user_registration_path, class: "main-cta" do %>
        <span>edit pro</span>
      <% end %>
      <br>
      <%= link_to new_client_path, class: "main-cta" do %>
        <span>Rechercher des pros près de chez moi</span>
      <% end %>
    </div>
  </div>
</div>


