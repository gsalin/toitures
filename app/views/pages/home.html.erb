  <div class="row row-annuaire-card-home">
    <div class="col-xs-12">
    <%= link_to users_path do %>
      <h1>L'annuaire</h1>
    <% end %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <h2>Des professionnels de qualité</h2>
      <ul>
        <li><i class="fa fa-check-square-o" aria-hidden="true"></i> Structure juridique de plus de 2 ans</li>
