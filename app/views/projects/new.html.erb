<% if @projects == nil || @projects.count == 0 %>
  <h1 class="text-center">Nouveau projet de la société <%= current_user.company %></h1>
<% else %>
  <h1 class="text-center">Créez ou modifiez vos projets</h1>
<% end %>

<% if @projects == nil || @projects.count < 4 %>
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-4 ">
        <% if @projects == nil || @projects.count < 4 %>
          <%= simple_form_for(@project) do |f| %>
            <%= f.input :title, placeholder: "Titre du projet" %>
            <%= f.input :description, placeholder: "Décrivez ce projet"   %>
            <%= f.input :cost, placeholder: "Indiquez le cout d'un tel projet" %>
            <%= f.input :address, placeholder: "Ou a été réalisé ce projet"   %>
            <%= f.input :date, placeholder: "Quant a été réalisé ce projet", input_html: {type: "text" , class: "datepicker datepicker-color"}, html5: true %>
            <%= f.input :project_photos, as: :attachinary %>
            <%= f.button :submit, "Créer un projet", class: "navbar-wagon-button" %>
          <% end %>
        <% end %>
      </div>
  <% else %>
  <p class="text-center">Vous avez déja créé 4 projets, vous pouvez modifier ou supprimer les projets ci-dessous :</p>
<% end %>

<% if @projects != nil%>
    <% @projects.each do |project| %>
    <div class="col-xs-10 col-xs-offset-1 col-sm-4 project_preview">
      <p class="text-center"> <%= project.title %> </p>
      <span> <%= cl_image_tag project.project_photos[0].path, width: 100, height: 66, crop: :fill   %> </span>
      <%= link_to "Modifier", edit_project_path(project), class: "btn btn-success" %>
      <%= link_to "Supprimer", project_path(project), class: "btn btn-danger",
          method: :delete,
          data: { confirm: "Etes vous sur?" } %>
    </div>
    <% end %>
  </div>
</div>
<% end %>

<div class="text-center">
  <%= link_to edit_user_registration_path, class: "btn btn-success" do %>
    <span>Retourner à mon profil</span>
  <% end %>
</div>

