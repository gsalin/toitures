<h1 class="text-center title_project_new">Edition de projets</h1>

<h5 class="text-center">Ici, vous pouvez présenter les projets que vous avez fait, ceux-ci apparaitront sur votre fiche et permettront à votre profil d'être plus consulté</h5>
<!-- formulaire de création -->
<% if @projects == nil || @projects.count < 4 %>
<h4 class="text-center" style="margin-top: 80px;margin-bottom: 40px;">Créer unouveau projet</h4>
<%= render "shared/form_project", project: @project %>

<% end %>





<% if @projects != nil %>
  <% if @projects.count < 4 && @projects.count > 0 %>
    <h3 class="text-center">Vous avez <%= @projects.count %> projet(s) sur 4 possibles</h3>
  <% end %>

<div class="container">
  <div class="row row_project_preview">
    <% @projects.each do |project| %>
    <div class="col-xs-12 col-md-3 project_preview">
      <p class="text-center"> <%= project.title %> </p>
      <span> <%= cl_image_tag project.project_photos[0].path, width: 100, height: 66, crop: :fill %> </span>
      <%= link_to "Modifier", edit_project_path(project), class: "btn btn-success" %>
      <%= link_to "Supprimer", project_path(project), class: "btn btn-danger",
            method: :delete,
            data: { confirm: "Etes vous sur?" } %>
    </div>
    <% end %>
  </div>
</div>
<% end %>

<div class="text-center">
  <%= link_to user_path(current_user), class: "btn btn-success" do %>
    <span>Retourner à mon profil</span>
  <% end %>
</div>

<%= content_for(:after_js) do %>
  <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyC0J8yKgp1HNvXsiK1_H_PCAz2f-D9Zq4Y"></script>
<% end %>
