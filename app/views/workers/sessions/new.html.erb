<h2>Log in</h2>

<%= simple_form_for(resource_worker, as: resource_name_worker, url: session_path(resource_name_worker)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping_worker.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "workers/shared/links" %>
