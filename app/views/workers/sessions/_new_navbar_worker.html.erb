<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <%= simple_form_for(resource_worker, as: resource_name_worker, url: session_path(resource_name_worker)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping_worker.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t(".sign_in")%>
        </div>
      <% end %>

      <%= render "workers/shared/links_for_worker_navbar_signin" %>
    </div>
  </div>
</div>
