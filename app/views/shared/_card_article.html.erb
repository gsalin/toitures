
<div class="col-xs-12 col-md-6">
  <div class="article-card">
    <%= link_to article_path(article) do %>
      <h6 class="text-center"><%= article.title %></h6>
      <div class="article-content">
        <% article.photos.each do |photo| %>
            <%= cl_image_tag photo.path, class: "img-card", width: 250, height: 150, crop: :fill %>
        <% end %>
        <p><%= article.category.name %></p>
        <span>Publi√© le <%= article.created_at %></span>
        <p><%= article.card_summary %></p>
        <%= link_to "Lire", article_path(article), class: "yellow-link"%>
      </div>
    <% end %>
  </div>
</div>



