<div class="container">
  <div class="row">
    <% @job_ads.each do |job_ad| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card-job-ad">
          <% if job_ad.profile_photo? %>
            <%= cl_image_tag job_ad.profile_photo.path, width: 100, height: 100,crop: :thumb, gravity: :face, class: "user-avatar" %>
          <% end %>
          <div class="card-job-name">
            <strong><span><%= job_ad.user.first_name %> <%= job_ad.user.last_name %></span></strong>
          </div>
          <div class="card-job-title">
            <span>Métier :
              <div class="yellow-job-title">
                <strong><%= job_ad.title %> </strong>
              </div>
            </span>
          </div>
          <div class="card-job-address">
            <span>Localisation :
              <div class="class blue-job-adress">
                <strong><%= job_ad.user.zip_code %> <%= job_ad.user.city %></strong>
              </div>
            </span>

          </div>
          <span><em>Formation : </em><strong><%= job_ad.diploma %></strong></span>
          <span><em>Expérience : </em><strong><%= job_ad.experience %> ans</strong></span>
          <span><em>Rémunération : </em><strong><%= job_ad.experience %> euros HT / journée</strong></span>
          <span><em>Mon entreprise : </em><strong><%= job_ad.user.company %> </strong></span>
          <div class="presentation">
            <span><em>Présentation : </em></span>
            <div class="card-job-description">
              <p><%= job_ad.description %></p>
            </div>
          </div>
          <%= link_to user_path(current_user), class: "navbar-wagon-button btn-edit-profil" do %>
            <span>Voir la page de mon entreprise</span>
          <% end %>


          <% if job_ad.cv? %>
            <div class="modal_phone">
              <button type="button" class="fa fa-address-card" data-toggle="modal" data-target="myModalcv<%= job_ad.id %> "></button>

              <!-- Modal telephone -->
              <div class="modal fade" id="myModalcv<%= job_ad.id %>" role="dialog">
                <div class="modal-dialog" id="user-modal-dialog">

                  <!-- Modal content -->
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                      <embed <%= cl_image_tag job_ad.cv.path, width: 1000, height: 600 %> >
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
