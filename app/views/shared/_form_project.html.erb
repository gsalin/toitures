<div class="container" id="margcontaiprojet">
  <div class="row">
    <%= simple_form_for(project) do |f| %>
      <div class="col-xs-10 col-md-6">
        <%= f.input :title, hint: "entre 15 et 50 charactères :", placeholder: "Rénovation de la charpente d'une ferme angevine" %>
      <div class="text-right counter-style">
        <span>charactères :</span>
        <strong><span id="title-project-count"></strong></span>
      </div>
        <%= f.input :address, placeholder: "Angers"   %>
        <div class="flexbox-project-form">
          <%= f.input :date, discard_day: true %>
          <%= f.input :cost %>
        </div>
        <%= f.input :project_photos, as: :attachinary, hint:"3 photos maximum" %>
      </div>
      <div class="col-xs-10 col-md-6">
        <%= f.input :description, as: :text, hint: "entre 100 et 500 charactères :", placeholder: "Décrivez ce projet, la demande du client, le temps de travaux, racontez une anecdote..."   %>
        <div class="text-right counter-style">
          <span>charactères :</span>
          <strong><span id="description-project-count"></strong></span>
        </div>
      </div>
      <div id="position_btn_project" class="text-center">
        <%= f.button :submit, "Publier ce projet", class: "navbar-wagon-button" %>
      </div>
    <% end %>
  </div>
</div>
