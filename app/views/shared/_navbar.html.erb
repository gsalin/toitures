      <a class="navbar-wagon-link dropdown-toggle" id="navbar-wagon-menu", data-toggle ="dropdown">Magazine</a>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li class="dropdown-media-container ">
          <ul class="list-unstyled">
            <li>
              <%= link_to "Magazine", magazine_index_path, class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
