<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand navbar-wagon-item navbar-wagon-link" do %>
    <%= image_tag "logo.png" %>
    <p>L'annuaire des professionnels de la toiture</p>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

  <%= link_to t(".top_call_to_action", default: "Annuaire"), users_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
    <!-- Search form -->
<!--     <form action="" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search something">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form> -->

    <!-- Nav links -->


  <!-- lien Accueil -->
  <div class="navbar-wagon-item">
    <%= link_to 'Retour', :back, class: "navbar-wagon-item navbar-wagon-link" %>
  </div>

<!-- lien guide -->
  <div class="navbar-wagon-item">
    <%= link_to "Guides", guides_path, class: "navbar-wagon-item navbar-wagon-link" %>
  </div>


<!-- lien magazine -->

  <div class="navbar-wagon-item">
    <%= link_to "Magazine", articles_path, class: "navbar-wagon-item navbar-wagon-link" %>
  </div>



    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->
      <%#= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
<!--         <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div> -->
      <%# end %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Me déconnecter") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Mon profil") %>
              <% end %>
            </li>
            <li>
              <%= link_to workers_path do %>
                <i class="fa fa-users"></i> <%= t(".profile", default: "Index des candidats") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% elsif worker_signed_in? %>

      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= cl_image_tag current_worker.photo.path, width: 60, height: 60, crop: :thumb, gravity: :face, class: "worker-avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown", style: "border-radius:50%;" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to destroy_worker_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Me déconnecter") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_worker_path(current_worker) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Mon profil") %>
              <% end %>
            </li>
            <li>
              <%= link_to workers_path do %>
                <i class="fa fa-users"></i> <%= t(".profile", default: "Index des candidats") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>
      <!-- Login text link -->
        <button type="button" class="navbar-wagon-item navbar-wagon-link" id="connect-btn-navbar" data-toggle="modal" data-target="#signin_modal ">Professionnel</button>
        <!-- Modal telephone -->
        <div class="modal fade" id="signin_modal" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Ravi de vous revoir</h3>
              </div>
              <div class="modal-body">
              <%= render "devise/sessions/new_navbar" %>
              </div>
            </div>
          </div>
        </div>

        <button type="button" class="navbar-wagon-item navbar-wagon-link" id="connect-btn-navbar" data-toggle="modal" data-target="#signin_modal_worker ">Candidat</button>
        <!-- Modal telephone -->
        <div class="modal fade" id="signin_modal_worker" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Ravi de vous revoir</h3>
              </div>
              <div class="modal-body">
              <%= render "workers/sessions/new_navbar_worker" %>
              </div>
            </div>
          </div>
        </div>

    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

