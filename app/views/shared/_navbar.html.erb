        </li>
      </ul>
    </div>
  </div>




    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->
      <%#= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
<!--         <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div> -->
      <%# end %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Me déconnecter") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Mon profil") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>
      <!-- Login text link -->
        <button type="button" class="navbar-wagon-item navbar-wagon-link" id="connect-btn-navbar" data-toggle="modal" data-target="#signin_modal ">Espace pro</button>
        <!-- Modal telephone -->
        <div class="modal fade" id="signin_modal" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Ravi de vous revoir</h3>
              </div>
              <div class="modal-body">
              <%= render "devise/sessions/new_navbar", resource: resource, resource_name: resource_name %>
              </div>
            </div>
          </div>
        </div>
    <% end %>

    <% if worker_signed_in? %>

      <!-- Notification -->
      <%#= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
<!--         <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div> -->
      <%# end %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to destroy_worker_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Me déconnecter") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_worker_registration_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Mon profil") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>
      <!-- Login text link -->
        <button type="button" class="navbar-wagon-item navbar-wagon-link" id="connect-btn-navbar" data-toggle="modal" data-target="#signin_modal_worker ">Espace candidat</button>
        <!-- Modal telephone -->
        <div class="modal fade" id="signin_modal_worker" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Ravi de vous revoir</h3>
              </div>
              <div class="modal-body">
              <%= render "workers/sessions/new_navbar_worker", resource: resource, resource_name: resource_name %>
              </div>
            </div>
          </div>
        </div>
    <% end %>

  </div>

